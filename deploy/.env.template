# LimeClicks Production Environment Variables Template
# Copy this file to /home/limeclicks/.env and update with your values

# Django Settings
DEBUG=False
SECRET_KEY=your-very-long-random-secret-key-here
# ALLOWED_DOMAINS can be a Python list or comma-separated string
# For production, add: ['portal.limeclicks.com', 'portal.fastgenerations.net', 'yourdomain.com']
ALLOWED_DOMAINS=['localhost', 'portal.limeclicks.com', 'portal.fastgenerations.net']
DJANGO_SETTINGS_MODULE=limeclicks.settings

# Database Configuration (PostgreSQL)
DB_NAME=limeclicks_db
DB_USER=limeclicks
DB_PASSWORD=generated-during-setup
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Security Settings
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_SECURE=True
SECURE_SSL_REDIRECT=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY

# Static and Media Files
STATIC_ROOT=/home/limeclicks/limeclicks/staticfiles
MEDIA_ROOT=/home/limeclicks/limeclicks/media

# Google API Keys (for SEO tools)
GOOGLE_API_KEY=your-google-api-key
GOOGLE_SEARCH_ENGINE_ID=your-search-engine-id

# Screaming Frog Settings
SCREAMING_FROG_PATH=/usr/bin/screamingfrogseospider

# Other API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn-if-using
GOOGLE_ANALYTICS_ID=your-ga-id

# Celery Settings
CELERY_TASK_ALWAYS_EAGER=False
CELERY_TASK_EAGER_PROPAGATES=False
CELERY_TIMEZONE=UTC
CELERY_BEAT_SCHEDULE_FILENAME=/home/limeclicks/limeclicks/celerybeat-schedule

# Cache Settings
CACHE_BACKEND=django_redis.cache.RedisCache
CACHE_LOCATION=redis://127.0.0.1:6379/1

# Cloudflare Settings (if using Cloudflare)
USE_CLOUDFLARE=True
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-zone-id

# Application Specific
SITE_NAME=LimeClicks
SITE_URL=https://yourdomain.com
ADMIN_URL=admin/  # Change this for security

# Logging
LOG_LEVEL=INFO
LOG_DIR=/var/log/limeclicks

# Performance
CONN_MAX_AGE=60
GUNICORN_WORKERS=4
CELERY_WORKERS=4