# LimeClicks Development Procfile
# Use: honcho -f Procfile.dev start
# Assumes Redis is running as system service on port 6379

# Core services
web: python manage.py runserver 0.0.0.0:8000
css: npx tailwindcss -i ./static/src/input.css -o ./static/dist/tailwind.css --watch

# Background task processing (optional - only if you need email sending)
worker: celery -A limeclicks worker --loglevel=info --pool=threads --concurrency=4
beat: celery -A limeclicks beat --loglevel=info
flower: celery -A limeclicks flower --port=5555